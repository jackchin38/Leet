class Solution:
    def maxProfit(self, prices):
        """
        :type prices: List[int]
        :rtype: int
        動態規劃的方式
        設最大最小和最佳三個數
        和每一個單元做比較
        如果比最大還大就取大最大然後看看獲利有沒有更多
        如果比最小還小就重整再開始
        
        """
        if len(prices) == 1: return 0
        elif prices == []: return 0
        else:
            max = min = prices[0]
            res = 0
            for i in range(len(prices)):
                if max < prices[i]: 
                    max = prices[i]
                    if res < (max-min): 
                        res = (max-min)
                if min > prices[i]: 
                    min = prices[i]
                    min = max = prices[i]
            return res

        
        
        
            
